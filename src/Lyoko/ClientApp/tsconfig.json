{
	"compilerOptions": {
		"target": "es2015",
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"lib": [
			"dom",
			"dom.iterable",
			"es2015"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
